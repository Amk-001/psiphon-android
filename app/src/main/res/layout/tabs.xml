<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1.0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/largeAdSlotContainer"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/largeAdSlot"
            android:layout_gravity="center"
            android:background="@drawable/large_banner"
            android:minWidth="300dip"
            android:minHeight="250dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tablayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/largeAdSlotContainer" >

        <HorizontalScrollView
            android:id="@+id/tabsScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>
    </RelativeLayout>

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tablayout" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeTab"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!-- Using 0dp, which is the equivalent of "MATCH_CONSTRAINT" -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/rateLimitLinearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/psicash_coordinator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/psicashContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:scrollbarAlwaysDrawVerticalTrack="false">

                        <FrameLayout
                            android:id="@+id/psicash_fragment_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>

            <include
                layout="@layout/rate_limit_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/settingsView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:weightSum="1.0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <FrameLayout
                    android:id="@+id/container_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/statisticsView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:weightSum="1.0" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/statistics" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/logsTab"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:weightSum="1.0" >

            <ListView
                android:id="@+id/statusList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000"
                android:drawSelectorOnTop="false" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
