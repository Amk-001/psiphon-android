<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psiphon3.subscription"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto">
    <uses-sdk tools:overrideLibrary="ca.psiphon,
com.mopub.mobileads,
com.mopub.mobileads.banner,
com.mopub.mobileads.base,
com.mopub.mobileads.interstitial,
com.mopub.mobileads.rewarded_video,
com.moat.analytics.mobile.mpub,
com.mopub.mobileads.admob,
com.mopub.mobileads.dfp.adapters,
com.mopub.mobileads.native_video,
com.mopub.mobileads.native_static,
androidx.media2.widget,
androidx.media2.session,
androidx.media2.player,
androidx.media2.common,
com.google.android.gms.ads.impl,
com.google.android.gms.gass,
com.google.android.gms.ads,
com.google.android.exoplayer2,
com.google.android.exoplayer2.ui,
com.google.android.exoplayer2.source.dash,
com.google.android.exoplayer2.source.hls,
com.google.android.exoplayer2.source.smoothstreaming,
com.google.android.exoplayer2.core,
com.google.android.gms.ads_base,
com.jakewharton.threetenabp" />
    <supports-screens
                  android:smallScreens="true"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <application
        android:name="com.psiphon3.PsiphonApplication"
        android:theme="@style/Theme.AppCompat"
        android:hardwareAccelerated="true"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:label="@string/app_name_psiphon_pro"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label,android:fullBackupContent">

        <!-- Required for newer devices -->
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${admobAppId}"/>

        <activity
            android:name="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs in the form of "psiphon://psicash” -->
                <data
                    android:scheme="psiphon"
                    android:host="psicash" />
            </intent-filter>
        </activity>
        <activity-alias
            android:name="com.psiphon3.psiphonlibrary.TunnelIntentsHandler"
            android:exported="false"
            android:targetActivity="com.psiphon3.StatusActivity" />

        <activity android:name="com.psiphon3.psiphonlibrary.NfcActivity" />
        <activity-alias
            android:name="com.psiphon3.psiphonlibrary.NfcActivity"
            android:targetActivity="com.psiphon3.StatusActivity"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="psiphon://nfc" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="com.psiphon3.FeedbackActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "psiphon://feedback” -->
                <data
                    android:scheme="psiphon"
                    android:host="feedback" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.psiphon3.psiphonlibrary.MoreOptionsPreferenceActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>
        <activity
            android:name="com.psiphon3.psicash.PsiCashStoreActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>
        <activity
            android:name="com.psiphon3.psiphonlibrary.VpnOptionsPreferenceActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>
        <activity
            android:name="com.psiphon3.psiphonlibrary.ProxyOptionsPreferenceActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>
        <service
            android:name="com.psiphon3.psiphonlibrary.TunnelVpnService"
            android:label="@string/app_name_psiphon_pro"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false"
            android:process=":TunnelService" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <meta-data
                android:name="android.net.VpnService.SUPPORTS_ALWAYS_ON"
                android:value="true" />
        </service>
        <activity
            android:name="com.psiphon3.PaymentChooserActivity"
            android:parentActivityName="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psiphon3.StatusActivity" />
        </activity>

        <provider
            android:name="com.psiphon3.psiphonlibrary.LoggingProvider"
            android:authorities="com.psiphon3.subscription.LoggingProvider"
            android:exported="false">
        </provider>

        <provider android:name="org.zirco.providers.ZircoBookmarksContentProvider" android:exported="false" android:authorities="org.zirco.providers.psiphonsubscriptionzircobookmarkscontentprovider"/>

        <activity android:name="com.google.android.gms.ads.AdActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>
